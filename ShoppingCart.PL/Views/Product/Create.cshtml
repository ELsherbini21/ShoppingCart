@model ProductViewModel
@{

}


<div class="form-body mt-3">
    <div class="row">
        <div class="form-holder">
            <div class="form-content">
                <div class="form-items">
                    <h3 class="mt-3 text-center">
                        <span class="badge bg-primary"> Create New Product</span>
                    </h3>
                    <form asp-action="Create" method="post" class="Create needs-validation" enctype="multipart/form-data">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <partial name="PartialViews/CreateUpdatePartial" model="@Model" />



                        <div class="form-button mt-3">
                            <a asp-action="Index" class="btn btn-info btn-lg w-25">Cancel</a>
                            <button id="submit" type="submit" class="btn btn-primary btn-lg w-25">Add</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section  scripts{
    <Partial name="_ValidationScriptsPartial" />
}