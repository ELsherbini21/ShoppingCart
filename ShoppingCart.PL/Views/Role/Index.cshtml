@model IEnumerable<IdentityRole>

@{
    ViewData["Title"] = "Role Index";
}

<style>
    /* Custom CSS for Index View */
    .table > tbody > tr > td {
        vertical-align: central; /* Vertically center content in cells */
    }

    .thumbnail-img {
        width: 50px;
        height: 50px;
        object-fit: cover;
    }

    .ellipsis {
        overflow: hidden;
        white-space: nowrap;
        text-overflow: ellipsis;
        max-width: 200px;
    }

    .action-btns a {
        margin-right: 5px; /* Add some space between action buttons */
    }

    .action-btns .btn {
        padding: 0.375rem 0.75rem; /* Adjust button padding */
    }

    /* Set container width to 100% of viewport width */
    .full-width-container {
        width: 90vw;
        padding-right: 15px; /* Adjust for Bootstrap's default padding */
        padding-left: 15px; /* Adjust for Bootstrap's default padding */
        margin-right: 1px;
        margin-left: -50px;
    }
</style>


<div class="row col-8 offset-2">


    <a asp-action="Create" class="btn btn-primary"> Create New Role </a>
</div>
<div class="width-container">
    <table class="table table-striped table-hover">
        <thead class="thead-dark">
            <tr>
                <th scope="col">Name</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    @{
                        var roleId = item.Id;
                    }
                    <td class="ellipsis"> <strong>  @Html.DisplayFor(modelItem => item.Name)</strong> </td>


                    <td class="action-btns mx-2 ">


                        <a asp-action="EditName" asp-route-roleId="@item.Id" class="btn btn-outline-info btn-lg mx-3">
                            Edit Role Name
                        </a>

                        <a asp-action="SelectUsers" asp-route-roleId="@item.Id" class="btn btn-outline-primary btn-lg mx-3">
                            Edit Users That in Role
                        </a>

                        <a asp-action="Delete" asp-route-roleId="@item.Id" class="btn btn-outline-danger btn-lg mx-3">
                            Delete This Role

                        </a>


                    </td>
                </tr>

            }
        </tbody>
    </table>
</div>

@section Scripts {

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
}